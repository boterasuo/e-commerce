<div class="d-flex justify-content-center">
    {{#if info}}
    <div class="single-product">
        <figure class="ratio ratio-4x3">
            <img class="cover-fit" src="/images/{{info.image}}" alt="{{info.name}}">
        </figure>
        <div class="product-info">
            <h3>{{info.name}}</h3>
            <h3>NT$ {{info.price}}</h3>
        </div>
        <div class="product-info">
            <p class="m-0">庫存: {{info.stock}}</p>
            <button 
                class="btn btn-dark" 
                type="button" 
                id="addCart"
                name="{{info.id}},{{info.name}},{{info.price}}">
                加入購物車
            </button>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-sm btn-secondary" id="backBtn">回前頁</button>
        </div>
    </div>
    {{/if}}
</div>

{{#unless info}}
<h3 class="mt-3 text-center">商品不存在！</h3>
<div class="text-center">
    <button type="button" class="btn btn-sm btn-secondary" id="backBtn">回前頁</button>
</div>
{{/unless}}

{{#section 'script'}}
<script src="/javascripts/product.js"></script>
{{/section}}