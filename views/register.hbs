<div class="w-25 m-auto py-4">
    <h2 class="text-center">註冊會員</h2>
    <form action="/signUp" method="POST" id="registerForm">
        <div class="d-flex flex-column">
            <div class="input-block">
                <label for="email">帳號</label>
                <input 
                    type="email" 
                    id="email" 
                    placeholder="請輸入常用信箱" 
                    name="email" 
                    value="{{email}}"
                >
                <div class="error-msg" id="email-error">{{{errorDIV.email}}}</div>
                <div class="d-flex align-items-center mt-2">
                    <button type="button" 
                            class="btn btn-secondary btn-sm"
                            id="check-email"
                    >
                        check email                        
                    </button>
                    <div id="check-result" class="mx-2"></div>
                </div>
            </div>
            <div class="input-block">
                <label for="password">密碼</label>
                <input 
                    type="password" 
                    id="password" 
                    placeholder="請輸入至少 8 碼"
                    name="password"
                    value="{{password}}"
                >
                <div class="error-msg" id="password-error">{{{errorDIV.password}}}</div>
            </div>
            <div class="input-block">
                <label for="confirmPw">確認密碼</label>
                <input 
                    type="password" 
                    id="confirmPw"
                    placeholder="請再輸入一次密碼"
                    name="confirmPw"
                    value="{{confirmPw}}"
                >
                <div class="error-msg" id="confirmPw-error">{{{errorDIV.confirmPw}}}</div>
            </div>
        </div>
        <div class="py-3 text-center">
            <a class="btn btn-secondary" href="/">算了</a>
            <button class="btn btn-dark" type="button" id="submit-btn">註冊</button>
        </div>
    </form>
</div>

{{#section 'script'}}
<script src="/javascripts/register.js"></script>
{{/section}}